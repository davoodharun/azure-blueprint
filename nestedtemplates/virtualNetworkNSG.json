{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "virtualNetworkName": {
      "type": "string"
    },
    "virtualNetworkAddressRange": {
      "type": "string"
    },
    "subnets": {
      "type": "array"
    },
    "dcNSGName": {
      "type": "string"
    },
    "sqlNSGName": {
      "type": "string"
    },
    "webNSGName": {
      "type": "string"
    },
    "mgtNSGName": {
      "type": "string"
    },
    "lbNSGName": {
      "type": "string"
    },
    "appGatewayAddressRange": {
      "type": "string"
    }
  },
  "resources": [
    {
      "comments": "Load Balancer NSG",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[parameters('lbNSGName')]",
      "apiVersion": "2016-03-30",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [

          {
            "name": "HTTPS",
            "properties": {
              "protocol": "TCP",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 101,
              "direction": "Inbound"
            }
          }
        ]
      },
      "resources": [],
      "dependsOn": []
    },
    {
      "comments": "MGT NSG",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[parameters('mgtNSGName')]",
      "apiVersion": "2016-03-30",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [

          {
            "name": "RDP",
            "properties": {
              "protocol": "TCP",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 102,
              "direction": "Inbound"
            }
          }
        ]
      },
      "resources": [],
      "dependsOn": []
    },
    {
      "comments": "DC NSG",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[parameters('dcNSGName')]",
      "apiVersion": "2016-03-30",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [

          
        ]
      },
      "resources": [],
      "dependsOn": []
    },
    {
      "comments": "SQL NSG",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[parameters('sqlNSGName')]",
      "apiVersion": "2016-03-30",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [

          
        ]
      },
      "resources": [],
      "dependsOn": []
    },
    {
      "comments": "WEB NSG",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[parameters('webNSGName')]",
      "apiVersion": "2016-03-30",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          
        ]
      },
      "resources": [],
      "dependsOn": []
    },
    {
      "name": "[parameters('virtualNetworkName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/', parameters('lbNSGName'))]"
      ],
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "tags": {
        "Project": "BluePrint"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('virtualNetworkAddressRange')]"
          ]
        },
        "subnets": "[parameters('subnets')]"
      }
    }
  ],
  "outputs": {}
}
